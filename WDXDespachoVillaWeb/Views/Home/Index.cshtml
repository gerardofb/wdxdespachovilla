            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $('#nav-principal li a').click(function (ev) {
            ev.preventDefault();
            var location = $(this).data('location');
            var position = $('#'+location).offset();
            console.log('position '+position.top);
            $("html, body").animate({ scrollTop: position.top -50 }, 800);
        })
    </script>
}