<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">*@
    @Styles.Render("~/Content/css")
    @*<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>*@
    @*<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>*@

    @Scripts.Render("~/bundles/modernizr")

</head>
<body data-spy="scroll" data-target=".navbar" data-offset="50">
    <div class="container-fluid" style="background-color: #241260; color: #fff; width: 100%;">
        <div class="navbar navbar-inverse" data-spy="affix" data-offset-top="79" id="headerMain" style="z-index:9999;">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Despacho Jurídico Villa", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color:transparent;", id="logositio" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav" style="color:white;">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Acerca de Nosotros", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>
                        @if (Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Mis Asuntos con el despacho", "MisAsuntos", "Authorize")</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div id="CarouselInicial" class="carousel slide" data-ride="carousel">
            <div id="MascaraCarousel" style="width:100%;height:100%;position:absolute;background:#241260;opacity:0.5;z-index:9997"></div>
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#CarouselInicial" data-slide-to="0" class="active"></li>
                <li data-target="#CarouselInicial" data-slide-to="1"></li>
                <li data-target="#CarouselInicial" data-slide-to="2"></li>
                <li data-target="#CarouselInicial" data-slide-to="3"></li>
                <li data-target="#CarouselInicial" data-slide-to="4"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/Images/Inicio/inicio_uno_wdxvilla.jpg" alt="Los Angeles" style="width:100%">
                    <div class="carousel-caption">
                        <h3>Abogados Villa</h3>
                        <p>Despacho de abogados</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/Inicio/inicio_dos_wdxvilla.jpg" alt="Chicago" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Abogados Villa</h3>
                        <p>Despacho de abogados</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/Inicio/inicio_tres_wdxvilla.jpg" alt="New York" style="width:100%;">
                    <div class="carousel-caption">
                        <h3>Abogados Villa</h3>
                        <p>Despacho de abogados</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/Inicio/inicio_cuatro_wdxvilla.jpg" alt="" style="width:100%" />
                    <div class="carousel-caption">
                        <h3>Abogados Villa</h3>
                        <p>Despacho de abogados</p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/Images/Inicio/inicio_cinco_wdxvilla.jpg" alt="" style="width:100%" />
                    <div class="carousel-caption">
                        <h3>Abogados Villa</h3>
                        <p>Despacho de abogados</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            @*<a class="left carousel-control-prev" href="#CarouselInicial" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Anterior</span>
                </a>
                <a class="right carousel-control-next" href="#CarouselInicial" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Siguiente</span>
                </a>*@
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Despacho Jurídico Villa</p>
        </footer>
    </div>
    <div class="modal fade" tabindex="-1" style="z-index:10000" role="dialog" id="modalMensajes">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Despacho Jurídico Villa</h4>
                </div>
                <div class="modal-body" id="Cuerpo">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="BtnAceptar">Aceptar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jsComun.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
